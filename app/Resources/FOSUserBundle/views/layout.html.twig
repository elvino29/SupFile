<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>{% block title %}Supfile-{% endblock %}</title>

        {% block stylesheets %}
            <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/foundation.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/font-awesome.min.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/animate.min.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/morphext.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/owl.carousel.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/owl.theme.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/owl.transitions.css')}}" />
            <link rel="stylesheet"href="{{ asset('bundles/css/front/other/slicknav.css')}}" />
            <link rel="stylesheet" href="{{ asset('bundles/css/front/other/style.css')}}" />
        {% endblock %}
    </head>
    <body class="login-page">

    <!--  HEADER -->
    <header class="login">
        <div class="top">
            <div class="row">
                <div class="small-12 large-3 medium-3 columns">
                    <div class="logo">
                        <a href="{{ path('app_index') }}" title=""><img src="{{ asset('bundles/img/front/logo.png') }}" alt="" title=""/></a>
                    </div>
                </div>

                <div class="small-12 large-9 medium-9 columns">

                    <!--  NAVIGATION MENU AREA -->
                    <nav class="desktop-menu">
                        <ul class="sf-menu" id="navigation">
                            <li class="current-menu-item"><a href="{{ path('fos_user_registration_register') }}">INSCRIPTION</a>
                            <li><a href="{{ path('fos_user_security_login') }}">SE CONNECTER</a></li>
                            <li><a href="{{ path('app_login') }}">QUI SOMME NOUS?</a></li>
                        </ul>
                    </nav>
                    <!--  END OF NAVIGATION MENU AREA -->

                </div>
            </div>
        </div>

    </header>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    <!-- LOGIN FORM -->
    <div class="login-container">
        <div class="row">
            <div class="small-12 large-7 large-centered medium-7 medium-centered columns">

                <div class="login-form">
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                </div>

            </div>
        </div>
    </div>

        <!--  FOOTER  -->
        <footer>
            <p class="copyright">Â© Copyright SUPLIFE </p>
        </footer>
        <!--  END OF FOOTER  -->

        {% block javascript %}
        <script src="{{ asset('bundles/js/front/other/jquery.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/what-input.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/foundation.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/hoverIntent.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/superfish.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/morphext.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/wow.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/jquery.slicknav.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/waypoints.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/jquery.animateNumber.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/other/retina.min.js') }}"></script>
        <script src="{{ asset('bundles/js/front/custom.js') }}"></script>

    {% endblock %}
    </body>
</html>
