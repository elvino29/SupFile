    <!--  END OF PRCING BOXES  -->

    <!--  TESTIMONIALS  -->
    <section class="testimonials">
        <div class="row">
            <div class="small-12 columns">
                <div class="circle"><i class="fa fa-heart"></i></div>
                <h2>LOVED BY GROUP SUPLIFE</h2>
                <hr class="small"/>
